# Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# Server Configuration
PORT=4000

# Authentication
JWT_SECRET=change_me_super_long_and_random

# Database
DATABASE_URL=postgresql://postgres:@localhost:5432/explorer

# Cache (Optional)
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=60

# Rate Limiting
RATE_LIMIT_PER_MIN=60

# Etherscan API
ETHERSCAN_API_KEY=__set_in_runtime_or_secrets__

# CORS Configuration (comma-separated list of allowed origins)
# Include your frontend domains here
CORS_ALLOW_ORIGINS=https://haswork.dev,https://www.haswork.dev
