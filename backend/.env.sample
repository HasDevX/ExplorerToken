# Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# Server Configuration
PORT=4000

# Authentication
JWT_SECRET=change_me_super_long_and_random

# Database
DATABASE_URL=postgresql://postgres:@localhost:5432/explorer

# Cache (Optional)
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=60

# Rate Limiting
RATE_LIMIT_PER_MIN=60

# Etherscan API
ETHERSCAN_API_KEY=__set_in_runtime_or_secrets__

# CORS Configuration
# Comma-separated list of allowed origins for auth/admin endpoints
# Leave empty to allow none, or use: http://localhost:5173,https://your-frontend.example.com
CORS_ALLOW_ORIGINS=

# JWT Configuration
JWT_ISSUER=explorertoken
JWT_AUDIENCE=explorertoken-admin

