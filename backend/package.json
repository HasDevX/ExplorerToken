{
  "name": "explorer-token-backend",
  "version": "1.0.0",
  "description": "Backend API server for ExplorerToken",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec node -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p . && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "echo \"Backend tests placeholder\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "migrate": "ts-node --transpile-only src/migrate/run.ts",
    "migrate:status": "ts-node --transpile-only src/migrate/run.ts --status"
  },
  "keywords": [
    "blockchain",
    "explorer",
    "etherscan",
    "api"
  ],
  "author": "HasDevX",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
